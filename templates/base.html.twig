<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EcoRide{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('assets/scss/main.css') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
        
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
            
            {% block importmap %}{{ importmap('app') }}{% endblock %}

            <script src="{{ asset('js/search_carpool.js') }}" defer></script>

            {# MODIFICATION : Ne charge pas les notifications pour les employés #}
            {% if app.user and not is_granted('ROLE_EMPLOYE') %}
                <script src="{{ asset('js/notifications.js') }}" defer></script>
            {% endif %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar bg-primary px-3">
                <div class="container-fluid d-flex justify-content-between align-items-center">

                    <!-- Bloc gauche -->
                    <div class="d-flex align-items-center gap-2">
                        <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu" aria-expanded="false" aria-label="Ouvrir le menu">
                            <i class="bi bi-list fs-1 text-light"></i>
                            <small class="btn-header text-light">Menu</small>
                        </button>
                        <ul class="navbar-nav flex-row gap-3 d-none d-lg-flex ms-3">
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('carpool_show') }}">Covoiturages</a></li>
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('app_contact') }}">Nous contacter</a></li>
                        </ul>
                    </div>

                    <!-- Logo centré -->
                    <div class="position-absolute start-50 translate-middle-x">
                        <a class="navbar-brand d-inline-flex" href="{{ path('app_home') }}">
                            <img src="{{ asset('assets/img/logoEcoride.png') }}" alt="Logo Ecoride" class="logo-ecoride">
                        </a>
                    </div>

                    <!-- Connexion / Compte -->
                    <div class="d-flex align-items-center justify-content-end gap-2">
                        <!-- VERSION DESKTOP -->
                        <div class="d-none d-lg-flex align-items-center">
                            {% if app.user %}
                                {# Si l'utilisateur est un employé #}
                                {% if is_granted('ROLE_EMPLOYE') %}
                                    <a href="{{ path('employee_dashboard') }}" class="btn btn-light">Tableau de bord</a>
                                    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-2">Déconnexion</a>
                                {# Si c'est un utilisateur normal #}
                                {% else %}
                                    {# DÉBUT MODIFICATION CLOCHE DE NOTIFICATION DESKTOP #}
                                    {% set notification_bell_href = '#' %}
                                    {% set notification_bell_toggle = 'dropdown' %}
                                    {% set notification_bell_target = '' %} {# Pas de target spécifique pour le dropdown #}

                                    {% if app.request.attributes.get('_route') starts with 'app_account' %}
                                        {% set notification_bell_href = path('app_account_notifications') %} {# Redirige vers la page des notifications #}
                                        {% set notification_bell_toggle = '' %} {# Retire le data-bs-toggle pour désactiver le dropdown #}
                                    {% endif %}

                                    <div class="dropdown me-3">
                                        <a href="{{ notification_bell_href }}" 
                                           class="d-block link-light text-decoration-none {% if notification_bell_toggle == 'dropdown' %}dropdown-toggle{% endif %} position-relative" 
                                           id="notification-bell" 
                                           {% if notification_bell_toggle %}data-bs-toggle="{{ notification_bell_toggle }}"{% endif %} 
                                           aria-expanded="false">
                                            <i class="bi bi-bell-fill fs-4"></i>
                                            <span id="notification-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">0</span>
                                        </a>
                                        {% if notification_bell_toggle == 'dropdown' %}
                                        <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="notification-bell" id="notification-list">
                                            <li><p class="text-center text-muted p-2 mb-0">Chargement...</p></li>
                                        </ul>
                                        {% endif %}
                                    </div>
                                    {# FIN MODIFICATION CLOCHE DE NOTIFICATION DESKTOP #}

                                    <a href="{{ path('app_account') }}" class="btn btn-light">Mon compte</a>
                                    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-2">Déconnexion</a>
                                {% endif %}
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-light">Connexion</a>
                            {% endif %}
                        </div>

                        <!-- VERSION MOBILE -->
                        {% if app.user %}
                               <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAccount" aria-controls="offcanvasAccount" aria-expanded="false" aria-label="Ouvrir le menu compte">
                                    {% if is_granted('ROLE_EMPLOYE') %}
                                        <i class="bi bi-card-checklist fs-1 text-light"></i>
                                    {% else %}
                                        <i class="bi bi-person-circle fs-1 text-light"></i>
                                    {% endif %}
                                    <small class="btn-header text-light">{{ is_granted('ROLE_EMPLOYE') ? 'Dashboard' : 'Mon compte' }}</small>
                               </button>
                        {% else %}
                            <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" onclick="location.href='{{ path('app_login') }}'">
                                <i class="bi bi-person-circle fs-1 text-light"></i>
                                <small class="btn-header text-light">Connexion</small>
                            </button>
                        {% endif %}
                    </div>
                </div>

                <!-- Menu déroulant mobile -->
                <div class="offcanvas offcanvas-start bg-primary text-light" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menu</h5>
                        <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="offcanvas" aria-label="Fermer"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('carpool_show')}}">Covoiturages</a></li>
                            <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('app_contact') }}">Nous contacter</a></li>
                        </ul>
                    </div>
                </div>

                    <!-- Offcanvas pour le Compte Utilisateur (Mobile) -->
                <div class="offcanvas offcanvas-end bg-primary text-light" tabindex="-1" id="offcanvasAccount" aria-labelledby="offcanvasAccountLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasAccountLabel">{{ is_granted('ROLE_EMPLOYE') ? 'Tableau de bord' : 'Mon compte' }}</h5>
                        <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="offcanvas" aria-label="Fermer"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <ul class="navbar-nav flex-column">
                            {% if is_granted('ROLE_EMPLOYE') %}
                                <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('employee_dashboard') }}">Tableau de bord</a></li>
                            {% else %}
                                <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('app_account') }}">Mon profil</a></li>
                                <li class="nav-item">
                                    <a class="nav-link text-light px-3 py-2 position-relative" 
                                       href="{{ path('app_account_notifications') }}"
                                       id="mobile-notification-link">
                                        Notifications
                                        <span id="notification-count-mobile" class="badge rounded-pill bg-danger ms-2 d-none">0</span>
                                    </a>
                                </li>
                            {% endif %}
                            <li class="nav-item"><hr class="dropdown-divider border-light mx-3"></li>
                            <li class="nav-item"><a class="nav-link text-danger px-3 py-2" href="{{ path('app_logout') }}">Déconnexion</a></li>
                        </ul>
                    </div>    
                </div>
            </nav>
        </header>

        <div>
            {% block bigtitle %}{% endblock %}
        </div>

        <main class="bg-light flex-grow-1">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} text-center m-3" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        {# NOUVEAU FOOTER AMÉLIORÉ #}
        <footer class="bg-secondary text-dark pt-5 pb-4">
            <div class="container text-center text-md-start">
                <div class="row text-center text-md-start">
                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold text-primary">EcoRide</h5>
                        <p>La plateforme de covoiturage écoresponsable qui vous connecte avec des conducteurs de confiance pour des trajets plus verts et plus économiques.</p>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold">Liens utiles</h5>
                        <p><a href="{{ path('app_home') }}" class="text-dark text-decoration-none">Accueil</a></p>
                        <p><a href="{{ path('carpool_show') }}" class="text-dark text-decoration-none">Covoiturages</a></p>
                        <p><a href="{{ path('app_contact') }}" class="text-dark text-decoration-none">Nous contacter</a></p>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold">Informations</h5>
                        <p><a href="{{ path('app_legal_mentions') }}" class="text-dark text-decoration-none">Mentions Légales</a></p>
                        <p><a href="{{ path('app_legal_cgu') }}" class="text-dark text-decoration-none">CGU</a></p>
                    </div>
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold">Contact</h5>
                        <p><i class="bi bi-envelope-fill me-3"></i>ecoride@exemple.com</p>
                        <p><i class="bi bi-telephone-fill me-3"></i>+33 1 23 45 67 89</p>
                    </div>
                </div>
                <hr class="mb-4">
                <div class="row align-items-center">
                    <div class="col-md-7 col-lg-8">
                        <p>2025 :
                            <a href="{{ path('app_home') }}" class="text-dark text-decoration-none">
                                <strong class="text-primary">EcoRide</strong>
                            </a>
                        </p>
                    </div>
                    <div class="col-md-5 col-lg-4">
                        <div class="text-center text-md-end">
                            <ul class="list-unstyled list-inline">
                                <li class="list-inline-item">
                                    <a href="https://www.facebook.com" target="_blank" class="btn-floating btn-sm text-dark" style="font-size: 23px;"><i class="bi bi-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://www.twitter.com" target="_blank" class="btn-floating btn-sm text-dark" style="font-size: 23px;"><i class="bi bi-twitter-x"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://www.instagram.com" target="_blank" class="btn-floating btn-sm text-dark" style="font-size: 23px;"><i class="bi bi-instagram"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </body>
</html>