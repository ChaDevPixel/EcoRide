<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EcoRide{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('assets/scss/main.css') }}">
        <link rel="stylesheet" href="/assets/bootstrap-icons/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar bg-primary px-3">
                <div class="container-fluid d-flex justify-content-between align-items-center">

                    <!-- Bloc gauche (Menu burger en mobile, nav en desktop) -->
                    <div class="d-flex align-items-center gap-2">
                        <!-- Menu burger mobile -->
                        <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu" aria-expanded="false" aria-label="Ouvrir le menu">
                            <i class="bi bi-list fs-1 text-light"></i>
                            <small class="btn-header text-light">Menu</small>
                        </button>

                        <!-- Navigation desktop -->
                        <ul class="navbar-nav flex-row gap-3 d-none d-lg-flex ms-3">
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('carpool_show') }}">Covoiturages</a></li>
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('app_contact') }}">Nous contacter</a></li>
                        </ul>
                    </div>

                    <!-- Logo centré -->
                    <div class="position-absolute start-50 translate-middle-x">
                        <a class="navbar-brand d-inline-flex" href="{{ path('app_home') }}">
                            <img src="{{ asset('assets/img/logoEcoride.png') }}" alt="Logo Ecoride" class="logo-ecoride">
                        </a>
                    </div>

                    <!-- Connexion / Compte -->
                    <div class="d-flex align-items-center justify-content-end gap-2">

                        <!-- VERSION DESKTOP -->
                        <div class="d-none d-lg-flex">
                            {% if app.user %}
                                <a href="{{ path('app_account') }}" class="btn btn-light">Mon compte</a>
                                <a href="{{ path('app_logout') }}" class="btn btn-danger ms-2">Déconnexion</a>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-light">Connexion</a>
                            {% endif %}
                        </div>


                        <!-- VERSION MOBILE -->
                        {% if app.user %}
                             <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAccount" aria-controls="offcanvasAccount" aria-expanded="false" aria-label="Ouvrir le menu compte">
                                <i class="bi bi-person-circle fs-1 text-light"></i>
                                <small class="btn-header text-light">Mon compte</small>
                            </button>
                        {% else %}
                            <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" onclick="location.href='{{ path('app_login') }}'">
                                <i class="bi bi-person-circle fs-1 text-light"></i>
                                <small class="btn-header text-light">Connexion</small>
                            </button>
                        {% endif %}
                    
                    </div>
                </div>

                <!-- Menu déroulant mobile -->
                <div class="offcanvas offcanvas-start bg-primary text-light" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menu</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Fermer"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-light px-3 py-2" href="{{ path('app_home') }}">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light px-3 py-2" href="{{ path('carpool_show')}}">Covoiturages</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light px-3 py-2" href="{{ path('app_contact') }}">Nous contacter</a>
                            </li>
                        </ul>
                    </div>
                </div>

                 <!-- NOUVEL Offcanvas pour le Compte Utilisateur (Mobile) -->
                <div class="offcanvas offcanvas-end bg-primary text-light" tabindex="-1" id="offcanvasAccount" aria-labelledby="offcanvasAccountLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasAccountLabel">Mon compte</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Fermer"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-light px-3 py-2" href="{{ path('app_account') }}">Mon profil</a>
                            </li>
                            {# Ajoutez d'autres liens de compte ici plus tard #}
                            <li class="nav-item">
                                <hr class="dropdown-divider border-light mx-3"> {# Utiliser border-light pour la couleur #}
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger px-3 py-2" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        </ul>
                    </div>   
                </div>
            </nav>
        </header>

        <div>
            {% block bigtitle %}
            {% endblock %}
        </div>
        
        <main class="bg-light flex-grow-1">
            {% block body %}
            {% endblock %}
        </main>

<footer class="bg-primary text-light py-4">
  <div class="container">
    <div class="row gy-4">

      <!-- Contact -->
      <div class="col-12 col-md-4 d-flex flex-column align-items-center text-center">
        <h6 class="fw-bold text-decoration-underline">Contact</h6>
        <p class="mb-1">ecoride@exemple.com</p>
        <p class="mb-0">+33 1 23 45 67 89</p>
      </div>

      <!-- Infos -->
      <div class="col-12 col-md-4 d-flex flex-column align-items-center text-center">
        <h6 class="fw-bold text-decoration-underline">Informations</h6>
        <a href="#" class="text-light text-decoration-none">Mentions légales</a>
        <a href="#" class="text-light text-decoration-none">CGU</a>
      </div>

      <!-- Réseaux sociaux -->
      <div class="col-12 col-md-4 d-flex flex-column align-items-center text-center">
        <h6 class="fw-bold text-decoration-underline">Suivez-nous</h6>
        <div class="d-flex justify-content-center gap-3">
          <a href="#" class="text-light fs-5"><i class="bi bi-facebook"></i></a>
          <a href="#" class="text-light fs-5"><i class="bi bi-twitter-x"></i></a>
          <a href="#" class="text-light fs-5"><i class="bi bi-instagram"></i></a>
        </div>
      </div>

    </div>

    <hr class="border-light my-4" />

    <div class="text-center small">
      2025 EcoRide
    </div>
  </div>
</footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
