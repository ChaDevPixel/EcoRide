<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EcoRide{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="{{ asset('assets/img/logoEcoride.png') }}">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Urbanist:ital,wght@0,100..900;1,100..900&display=sw" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="{{ asset('assets/styles/main.css') }}">
    </head>

    <body class="d-flex flex-column min-vh-100" data-controller="notification">
        <header>
            <nav class="navbar d-flex align-items-center justify-content-space-between bg-primary px-3 ">
                <div class="container-fluid d-flex justify-content-between align-items-center">

                    <div class="d-flex align-items-center gap-2">
                        <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu" aria-expanded="false" aria-label="Ouvrir le menu">
                            <i class="bi bi-list fs-1 text-light"></i>
                            <small class="fs-7 fs-7 text-light">Menu</small>
                        </button>
                        <ul class="navbar-nav flex-row gap-3 d-none d-lg-flex ms-3">
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('carpool_show') }}">Covoiturages</a></li>
                            <li class="nav-item"><a class="nav-link text-light" href="{{ path('app_contact') }}">Nous contacter</a></li>
                        </ul>
                    </div>

                    <div class="position-absolute start-50 translate-middle-x">
                        <a class="navbar-brand d-inline-flex" href="{{ path('app_home') }}">
                            <img src="{{ asset('assets/img/logoEcoride.png') }}" alt="Logo Ecoride" class="logo-ecoride rounded-circle object-fit-cover ">
                        </a>
                    </div>

                    <div class="d-flex align-items-center justify-content-end gap-2">
                        <div class="d-none d-lg-flex align-items-center">
                            {% if app.user %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('admin_dashboard') }}" class="btn btn-light">Tableau de bord</a>
                                    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-2">Déconnexion</a>
                                {% elseif is_granted('ROLE_EMPLOYE') %}
                                    <a href="{{ path('employee_dashboard') }}" class="btn btn-light">Tableau de bord</a>
                                    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-2">Déconnexion</a>
                                {% else %}
                                    {% set notification_bell_href = '#' %}
                                    {% set notification_bell_toggle = 'dropdown' %}
                                    {% if app.request.attributes.get('_route') starts with 'app_account' %}
                                        {% set notification_bell_href = path('app_account') ~ '#notifications' %} 
                                        {% set notification_bell_toggle = '' %} 
                                    {% endif %}
                                    <div class="dropdown me-3">
                                        <a href="{{ notification_bell_href }}"
                                        class="d-block link-light text-decoration-none {% if notification_bell_toggle == 'dropdown' %}dropdown-toggle{% endif %} position-relative"
                                        id="notification-bell"
                                        {% if notification_bell_toggle %}data-bs-toggle="{{ notification_bell_toggle }}"{% endif %}
                                        aria-expanded="false"
                                        data-notification-target="notificationBell" 
                                        data-action="click->notification#handleBellClick" 
                                            <i class="bi bi-bell-fill fs-4"></i>
                                            <span id="notification-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none" data-notification-target="countBadge">0</span> 
                                        </a>
                                        {% if notification_bell_toggle == 'dropdown' %}
                                        <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="notification-bell" data-notification-target="notificationList"> 
                                            <li><p class="text-center text-muted p-2 mb-0">Chargement...</p></li>
                                        </ul>
                                        {% endif %}
                                    </div>
                                    <a href="{{ path('app_account') }}" class="btn btn-light">Mon compte</a>
                                    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-2">Déconnexion</a>
                                {% endif %}
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-light">Connexion</a>
                            {% endif %}
                        </div>

                        {% if app.user %}
                        <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAccount" aria-controls="offcanvasAccount" aria-expanded="false" aria-label="Ouvrir le menu compte">
                                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYE') %}
                                    <i class="bi bi-card-checklist fs-1 text-light"></i>
                                    <small class="fs-7 text-light">Dashboard</small>
                                {% else %}
                                    <i class="bi bi-person-circle fs-1 text-light"></i>
                                    <small class="fs-7 text-light">Mon compte</small>
                                {% endif %}
                        </button>
                        {% else %}
                            <button class="navbar-toggler d-flex d-lg-none flex-column align-items-center px-2 py-1" type="button" onclick="location.href='{{ path('app_login') }}'">
                                <i class="bi bi-person-circle fs-1 text-light"></i>
                                <small class="fs-7 text-light">Connexion</small>
                            </button>
                        {% endif %}
                    </div>
                </div>

                <div class="offcanvas offcanvas-start bg-primary text-light" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menu</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Fermer"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('carpool_show')}}">Covoiturages</a></li>
                            <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('app_contact') }}">Nous contacter</a></li>
                        </ul>
                    </div>
                </div>

                <div class="offcanvas offcanvas-end bg-primary text-light" tabindex="-1" id="offcanvasAccount" aria-labelledby="offcanvasAccountLabel" data-notification-target="offcanvasAccountElement">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasAccountLabel">
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYE') %}
                                Tableau de bord
                            {% else %}
                                Mon compte
                            {% endif %}
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Fermer"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <ul class="navbar-nav flex-column">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('admin_dashboard') }}">Tableau de bord</a></li>
                            {% elseif is_granted('ROLE_EMPLOYE') %}
                                <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('employee_dashboard') }}">Tableau de bord</a></li>
                            {% else %}
                                <li class="nav-item"><a class="nav-link text-light px-3 py-2" href="{{ path('app_account') }}">Mon profil</a></li>
                                <li class="nav-item">
                                    <a class="nav-link text-light px-3 py-2 position-relative"
                                    href="{{ path('app_account') }}#notifications"
                                    data-notification-target="mobileNotificationLink" 
                                    data-action="click->notification#handleMobileNotificationClick">
                                        Notifications
                                        <span id="notification-count-mobile" class="badge rounded-pill bg-danger ms-2 d-none" data-notification-target="countBadgeMobile">0</span> 
                            {% endif %}
                            <li class="nav-item"><hr class="dropdown-divider border-light mx-3"></li>
                            <li class="nav-item"><a class="nav-link text-danger px-3 py-2" href="{{ path('app_logout') }}">Déconnexion</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div>
            {% block bigtitle %}{% endblock %}
        </div>

        <main class="bg-light flex-grow-1">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} text-center m-3" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer class="bg-primary text-light pt-5 pb-4">
            <div class="container text-center text-md-start">
                <div class="row text-center text-md-start">
                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold text-secondary">EcoRide</h5>
                        <p>La plateforme de covoiturage écoresponsable qui vous connecte avec des conducteurs de confiance pour des trajets plus verts et plus économiques.</p>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold">Liens utiles</h5>
                        <p><a href="{{ path('app_home') }}" class="text-light text-decoration-none">Accueil</a></p>
                        <p><a href="{{ path('carpool_show') }}" class="text-light text-decoration-none">Covoiturages</a></p>
                        <p><a href="{{ path('app_contact') }}" class="text-light text-decoration-none">Nous contacter</a></p>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold">Informations</h5>
                        <p><a href="{{ path('app_legal_mentions') }}" class="text-light text-decoration-none">Mentions Légales</a></p>
                        <p><a href="{{ path('app_legal_cgu') }}" class="text-light text-decoration-none">CGU</a></p>
                    </div>
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 fw-bold">Contact</h5>
                        <p><i class="bi bi-envelope-fill me-3"></i>ecoride@exemple.com</p>
                        <p><i class="bi bi-telephone-fill me-3"></i>+33 1 23 45 67 89</p>
                    </div>
                </div>
                <hr class="mb-4">
                <div class="row align-items-center">
                    <div class="col-md-7 col-lg-8">
                        <p>2025 :
                            <a href="{{ path('app_home') }}" class="text-light text-decoration-none">
                                <strong class="text-secondary">EcoRide</strong>
                            </a>
                        </p>
                    </div>
                    <div class="col-md-5 col-lg-4">
                        <div class="text-center text-md-end">
                            <ul class="list-unstyled list-inline">
                                <li class="list-inline-item">
                                    <a href="https://www.facebook.com" target="_blank" class="btn-floating btn-sm text-light fs-4"><i class="bi bi-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://www.twitter.com" target="_blank" class="btn-floating btn-sm text-light fs-4"><i class="bi bi-twitter-x"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://www.instagram.com" target="_blank" class="btn-floating btn-sm text-light fs-4"><i class="bi bi-instagram"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}

            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const hash = window.location.hash;
                    if (hash === '#notifications') {
                        const notificationsTabButton = document.getElementById('notifications-tab');
                        if (notificationsTabButton) {
                            // Attendre que Bootstrap soit prêt
                            setTimeout(() => {
                                var tab = new bootstrap.Tab(notificationsTabButton);
                                tab.show();
                            }, 0);
                        }
                    }
                });
            </script>
        {% endblock %}

    </body>
</html>