{% extends 'base.html.twig' %}
{% block title %}Connexion / Inscription - Ecoride{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <main class="bg-light">

        <div class="container mt-4 mb-3"> 
            <div class="row justify-content-center"> 
                <div class="col-12 col-md-8 col-lg-6"> 
                
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger text-center" role="alert">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('info') %}
                        <div class="alert alert-warning text-center" role="alert">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center" role="alert">{{ message }}</div>
                    {% endfor %}
                    {% if error %}
                        <div class="alert alert-danger text-center" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security', 'fr') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="container-auth d-md-flex bg-light font-family-sans-serif" id="authContainer">
            
            <div class="form-container sign-in-container">
                <form method="post" action="{{ path('app_login') }}" data-turbo="false"> 
                    <h2 class="mb-4">Se connecter</h2>
                    <input type="email" class="form-control mb-2" placeholder="Email" name="email" value="{{ last_username }}" required> 
                    <input type="password" class="form-control mb-2" placeholder="Mot de passe" name="password" required> 
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> 
                    <button type="submit" class="btn btn-success w-100">Connexion</button>
                </form>
            </div>

            <div class="form-container sign-up-container">
                <form method="post" action="{{ path('app_register_prepare') }}" data-turbo="false">
                    <h2 class="mb-4">S'inscrire</h2>
                    <input type="text" name="nom" class="form-control mb-2" placeholder="Nom" required>
                    <input type="text" name="prenom" class="form-control mb-2" placeholder="Prénom" required>
                    <input type="email" name="email" class="form-control mb-2" placeholder="Email" required>
                    <input type="password" name="password" class="form-control mb-2" placeholder="Mot de passe" required>
                    <button type="submit" class="btn btn-success w-100 mb-2">Inscription</button>
                </form>
            </div>

            <div class="overlay-container">
                <div class="overlay bg-primary text-light d-md-flex">
                    <div class="overlay-panel overlay-left d-flex flex-column align-items-center text-center justify-content-center">
                        <div class="position-absolute top-0 pt-4">
                            <a href="{{ path('app_home') }}">
                                <img src="{{ asset('assets/img/logoEcoride.png') }}" alt="Logo Ecoride" class="logo-ecoride-signin">
                            </a>
                        </div>
                        <div>
                            <h2>Déjà inscrit ?</h2>
                            <p>Connecte-toi pour accéder à ton compte.</p>
                            <button class="btn btn-light" id="signIn">Se connecter</button>
                        </div>
                    </div>

                    <div class="overlay-panel overlay-right d-flex flex-column align-items-center text-center justify-content-center">
                        <div class="position-absolute top-0 pt-4">
                            <a href="{{ path('app_home') }}">
                                <img src="{{ asset('assets/img/logoEcoride.png') }}" alt="Logo Ecoride" class="logo-ecoride-signin">
                            </a>
                        </div>
                        <div>
                            <h2>Pas encore inscrit ?</h2>
                            <p>Inscris-toi pour rejoindre la communauté EcoRide !</p>
                            <button class="btn btn-light" id="signUp">S'inscrire</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function initializeAuthAnimation() {
                const container = document.getElementById('authContainer');
                const signUpButton = document.getElementById('signUp');
                const signInButton = document.getElementById('signIn');

                if (container && signUpButton && signInButton) {
                    if (!signUpButton._hasAuthListener) {
                        signUpButton.addEventListener('click', () => {
                            container.classList.add('right-panel-active');
                        });
                        signUpButton._hasAuthListener = true; 
                    }

                    if (!signInButton._hasAuthListener) {
                        signInButton.addEventListener('click', () => {
                            container.classList.remove('right-panel-active');
                        });
                        signInButton._hasAuthListener = true; 
                    }

                } else {
                    console.error("Éléments de la page d'authentification introuvables. La dynamique ne peut pas être initialisée.");
                }
            }

            document.addEventListener('DOMContentLoaded', initializeAuthAnimation);
            document.addEventListener('turbo:load', initializeAuthAnimation);
        </script>

    </main>
{% endblock %}