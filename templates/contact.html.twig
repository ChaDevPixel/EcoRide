{% extends 'base.html.twig' %}

{% block title %}Nous Contacter - Ecoride{% endblock %}

{% block body %}
<style>
    /* Ajout d'un style personnalisé pour un effet de fond subtil et une meilleure présentation */
    .contact-container {
        max-width: 800px;
        margin: 4rem auto;
        padding: 2rem;
        background-color: #f8f9fa; /* Fond légèrement gris */
        border-radius: 15px; /* Bords plus arrondis */
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); /* Ombre plus prononcée */
    }
    .contact-header {
        border-bottom: 2px solid var(--bs-primary); /* Ligne de couleur primaire sous le titre */
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }
    .btn-primary {
        /* On s'assure que le bouton a le style qu'on veut */
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
        transition: background-color 0.3s, transform 0.3s;
    }
    .btn-primary:hover {
        transform: translateY(-2px); /* Léger effet au survol */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="container contact-container">
    <div class="text-center contact-header">
        <h1 class="display-5 text-primary">Contactez-nous</h1>
        <p class="lead">Une question, une suggestion ? N'hésitez pas à nous écrire.</p>
    </div>

    <form action="{{ path('app_contact') }}" method="post">
        <div class="row">
            <!-- Champ Prénom -->
            <div class="col-md-6 mb-3">
                <label for="firstname" class="form-label fw-bold">Prénom</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input type="text" class="form-control mb-0" id="firstname" name="firstname" placeholder="Votre prénom" required>
                </div>
            </div>

            <!-- Champ Nom -->
            <div class="col-md-6 mb-3">
                <label for="lastname" class="form-label fw-bold">Nom</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input type="text" class="form-control mb-0" id="lastname" name="lastname" placeholder="Votre nom" required>
                </div>
            </div>
        </div>

        <!-- Champ Email -->
        <div class="mb-3">
            <label for="email" class="form-label fw-bold">Adresse Mail</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                <input type="email" class="form-control mb-0" id="email" name="email" placeholder="votre.email@example.com" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="subject" class="form-label fw-bold">Objet</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-chat-left-dots-fill"></i></span>
                <input type="text" class="form-control mb-0" id="subject" name="subject" placeholder="L'objet de votre message" required>
            </div>
        </div>

        <!-- Champ Message -->
        <div class="mb-4">
            <label for="message" class="form-label fw-bold">Votre message</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-pencil-fill"></i></span>
                <textarea class="form-control" id="message" name="message" rows="6" placeholder="Écrivez votre message ici..." required></textarea>
            </div>
        </div>

        <!-- Bouton d'envoi -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-send-fill me-2"></i> Envoyer
            </button>
        </div>
    </form>
</div>
{% endblock %}